<form action="/post/editar" method="POST">
    <input type="hidden" id="id" name="id" value="{{id}}" />
    <div class="form-group row">
        <div class="col-xs-2">
            <label for="titulo">Título:</label>
            <input type="text" class="form-control" id="titulo" name="titulo" value="{{titulo}}">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label for="texto">Texto:</label>
            <input type="text" class="form-control" id="texto" name="texto" value="{{texto}}">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label for="autor">Autor:</label>
            <input type="text" class="form-control" id="autor" name="autor" value="{{autor}}">
        </div>
    </div>
    {{#if admin}}
    <div>
        <label class="py-4"> Status
            <select id="status" name="status">
                <option value="0">Bloqueado</option>
                <option value="1">Liberado</option>
            </select>
        </label>
    </div>
    {{/if}}

    <div class="form-group row">
        <div class="col-xs-4">
            <label for="autor">Comentário:</label>
            <input type="text" class="form-control" id="comentario" name="comentario" value="{{comentario}}">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label for="autor">Curtidas:</label>
            <input type="text" class="form-control" id="curtidas" name="curtidas" value="{{curtidas}}">
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Enviar">
    </div>
</form>